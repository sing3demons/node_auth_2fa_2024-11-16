{
  "compilerOptions": {
    "target": "ES2022",
    // "lib": ["ES2022"],
    "allowJs": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "noUncheckedIndexedAccess": true,
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "drizzle.config.ts"]
}
